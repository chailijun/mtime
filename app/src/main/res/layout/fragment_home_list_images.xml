<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/marginLeft"
    android:layout_marginRight="@dimen/marginLeft"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tag"
        style="@style/TagStyle"
        android:background="@color/colorBGTuji"
        tools:text="@string/tuji" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:ellipsize="end"
        android:maxLines="2"
        android:singleLine="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        tools:text="既然行为由恶驱动，那么棋局中的所有主角都是恶人，整个棋盘就像一个修罗场。" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorTitle2"
        android:textSize="@dimen/text_size_14"
        tools:text="既然行为由恶驱动，那么棋局中的所有主角都是恶人，整个棋盘就像一个修罗场。" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop">

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="0dp"
            android:layout_height="204dp"
            android:layout_weight="2"
            android:background="@drawable/imageview_border"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/imageview_border"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/imageview_border"
                android:scaleType="centerCrop" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginTop"
        android:layout_marginTop="@dimen/marginTop"
        android:singleLine="true"
        android:textColor="@color/colorTitle2"
        android:textSize="@dimen/text_size_12"
        tools:text="0小时前     评论0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_0dot8_dp"
        android:background="@color/colorLine" />


</LinearLayout>