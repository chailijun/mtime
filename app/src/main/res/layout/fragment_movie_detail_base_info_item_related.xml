<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_related"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/divier"/>

    <RelativeLayout
        android:id="@+id/rl_more_goods"
        android:paddingLeft="@dimen/marginLeft"
        android:paddingRight="@dimen/marginRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/goods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_relation"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:id="@+id/video_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/drawablePadding"
            android:drawableRight="@drawable/my_home_center_arrow"
            android:gravity="end"
            android:text="@string/all"
            android:textColor="@color/colorGrayText"
            android:textSize="@dimen/text_size_15" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="1dp"
                    android:id="@+id/goods1_img"
                    android:scaleType="centerCrop"
                    android:background="@drawable/img_default_45x45"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />
                <TextView
                    tools:text="新品"
                    android:id="@+id/goods1_icontext"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_goods1_name"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                tools:text="商品\n名称"
                android:textSize="@dimen/text_size_15"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_goods1_price"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorOrange"
                tools:text="￥000.00"
                android:textSize="@dimen/text_size_16"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="1dp"
                    android:id="@+id/goods2_img"
                    android:scaleType="centerCrop"
                    android:background="@drawable/img_default_45x45"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />
                <TextView
                    android:id="@+id/goods2_icontext"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_goods2_name"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                tools:text="商品\n名称"
                android:textSize="@dimen/text_size_15"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_goods2_price"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorOrange"
                tools:text="￥000.00"
                android:textSize="@dimen/text_size_16"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="1dp"
                    android:id="@+id/goods3_img"
                    android:scaleType="centerCrop"
                    android:background="@drawable/img_default_45x45"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />
                <TextView
                    android:id="@+id/goods3_icontext"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_goods3_name"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                tools:text="商品\n名称"
                android:textSize="@dimen/text_size_15"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_goods3_price"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorOrange"
                tools:text="￥000.00"
                android:textSize="@dimen/text_size_16"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>