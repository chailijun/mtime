<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_onclick_bg_selector"
    android:paddingLeft="@dimen/marginLeft"
    android:paddingRight="@dimen/marginRight"
    android:paddingTop="14dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        tools:text="你这么有腔调，我怎么把你当流氓？" />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginRight="60dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/colorTitle2"
        android:textSize="@dimen/text_size_14"
        tools:text="看完电影，不知从何下笔，程耳的作品一向如此，《边境风云》也\n好，" />

    <LinearLayout
        android:id="@+id/user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_summary"
        android:layout_marginRight="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:ellipsize="end"
            android:maxEms="8"
            android:maxLines="1"
            android:textColor="@color/colorTitle2"
            android:textSize="@dimen/text_size_12"
            tools:text="神经影FUN-评" />

        <TextView
            android:id="@+id/tv_comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold"
            tools:text="《阿修罗》" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBGYingping"
            android:maxLines="1"
            android:paddingLeft="@dimen/line_1_dp"
            android:paddingRight="@dimen/line_1_dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone"
            tools:text="0.0"
            tools:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/img_default"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_0dot8_dp"
        android:layout_below="@id/user_info"
        android:layout_marginTop="14dp"
        android:background="@color/colorLine" />
</RelativeLayout>