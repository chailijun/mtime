<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/marginLeft"
    android:layout_marginRight="@dimen/marginLeft"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tag"
        style="@style/TagStyle"
        android:background="@color/colorBGGuessMovie"
        tools:text="@string/guess_movie" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop"
                android:ellipsize="end"
                android:maxLines="2"
                android:singleLine="false"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"
                tools:text="既然行为由恶驱动，那么棋局中的所有主角都是恶人" />

            <TextView
                android:id="@+id/tv_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:textColor="@color/colorTitle2"
                android:textSize="@dimen/text_size_14"
                tools:text="既然行为由恶驱动，那么棋局中的所有主角都是恶人，整个棋盘就像一个修罗场。" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="14dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_is_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/homefeed_play"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/imageview_border"
                android:scaleType="centerCrop" />
        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_0dot8_dp"
        android:layout_marginBottom="@dimen/marginTop"
        android:layout_marginTop="@dimen/marginTop"
        android:background="@color/colorLine" />
</LinearLayout>