<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/marginLeft">

    <RelativeLayout
        android:id="@+id/rl_date"
        android:layout_width="wrap_content"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/show_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="12月8日"
            android:textColor="@color/colorTitle2"
            android:textSize="@dimen/text_size_14" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/line_0dot8_dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/show_date"
            android:background="@color/colorLine" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/movie_img"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_below="@id/rl_date"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/img_default"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/movie_img"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/movie_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你的名字。"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/want_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorTitle2"
            android:text="250人想看-剧情/悬疑"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="导演"
            android:textColor="@color/colorTitle2"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="演员"
            android:textColor="@color/colorTitle2"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_sale"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/movie_img"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/movie_img"
        android:background="@drawable/bt_solid_green_66"
        android:text="超前预售"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_14" />

    <Button
        android:id="@+id/btn_trailer"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/movie_img"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/btn_sale"
        android:background="@drawable/bt_line_green_66"
        android:text="预告片"
        android:textColor="@color/colorBGYingping"
        android:textSize="@dimen/text_size_14" />

    <View
        android:layout_width="@dimen/line_0dot8_dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorLine" />


</RelativeLayout>