<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorCommentBG"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_0dot8_dp"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_comment"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/find_news_comment_msg" />

            <TextView
                android:visibility="gone"
                android:paddingBottom="@dimen/line_1_dp"
                android:id="@+id/tv_comment_count"
                android:layout_width="18dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/comments_number_icon"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_12" />


        </RelativeLayout>

        <EditText
            android:paddingLeft="2dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bottom_comments_edit_background"
            android:textSize="@dimen/text_size_14"
            android:hint="@string/comment_edittext_hint"
            android:layout_width="0dp"
            android:layout_height="38dp" />

        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/text_size_16"
            android:text="@string/send"
            android:background="@android:color/transparent"
            android:layout_width="50dp"
            android:layout_height="30dp" />


    </LinearLayout>

</LinearLayout>