<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activity.ReviewDetailActivity">

    <include layout="@layout/head_with_favorite_share"
        android:id="@+id/head"/>

    <ScrollView
        android:layout_below="@id/head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:id="@+id/fl_review_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/activity_review_detail_head"/>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/activity_review_detail_bottom_comment"/>
</RelativeLayout>
