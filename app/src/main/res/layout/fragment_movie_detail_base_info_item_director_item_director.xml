<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp">


    <TextView
        android:id="@+id/director_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/director"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_16" />
    <ImageView
        android:layout_marginRight="12dp"
        android:layout_below="@id/director_actor"
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/img_default_45x45"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:id="@+id/director_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="冯小刚"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_12" />


    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/director_name"
        android:id="@+id/director_name_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Xiaogang Feng"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_12" />

    <View
        android:layout_marginRight="12dp"
        android:layout_alignTop="@id/img"
        android:layout_toRightOf="@id/img"
        android:background="@color/colorLine"
        android:layout_width="@dimen/line_1_dp"
        android:layout_height="100dp"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/director_name_en"
        android:id="@+id/role_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="饰：某某某"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_12" />
</RelativeLayout>