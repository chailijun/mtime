<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:paddingLeft="@dimen/marginLeft"
    android:paddingRight="@dimen/marginRight"
    android:minHeight="160dp"
    android:background="@drawable/item_onclick_bg_selector">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16"
        tools:text="“尼根”与“蚁人”合伙开糖果店" />

    <LinearLayout
        android:id="@+id/ll_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/img_default_45x45"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/img_default_45x45"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/img_default_45x45"
            android:scaleType="centerCrop" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_image"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:textColor="@color/colorTitle3"
        android:textSize="@dimen/text_size_12"
        tools:text="2小时前     评论6" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLine" />

</RelativeLayout>