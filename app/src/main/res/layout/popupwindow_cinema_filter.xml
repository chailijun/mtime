<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cinema_filter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@color/white"
    tools:context="com.chailijun.mtime.cinema_movie.CinemaFilterActivity">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:layout_weight="1"
            android:id="@+id/tabs"
            style="@style/PayticketTabLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_head"
            app:tabMode="fixed"
            app:tabTextAppearance="@style/PopupWindowTabLayout" />

        <ImageView
            android:scaleType="centerCrop"
            android:padding="10dp"
            android:background="@drawable/btn_close"
            android:id="@+id/colse"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <GridView
        android:numColumns="3"
        android:id="@+id/gv_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </GridView>






</LinearLayout>
